
def gv

pipeline {
    agent any
    parameters {
    
        string(name: "ADDRESS_IP", defaultValue: "10.18.14.40", trim: true, description: "Address IP of BANC_DE_TEST")
        listGitBranches(
            branchFilter: 'origin.*/(.*)',
            defaultValue: 'default',
            name: 'nameOfVariable',
            type: 'BRANCH',
            remoteURL: 'https://gitlab-energie.actiatelecom.fr/emis/emis.git',
            credentialsId: 'ID_TOKEN_GITLAB_ACTIA_PERSO')
    }
    
    stages {
        stage("init") {
            steps {
                script {
                    def rootDir = pwd()
                    gv = load "${rootDir}/DevOps/Jenkins/script.groovy" 
                    gv.paramList
                    
                     def choice = input message: 'Please select', ok: 'Next',
                             parameters: [choice(name: 'PRODUCT', choices: tests(), description: 'Please select the test')]
                     echo '$choice'
                    
                   sh ' echo "init"'
                }
            }
        }
        stage("build") {
            steps {
                script {
                   sh ' echo "Start build"'
                    gv.buildApp()
                   sh ' echo "End build"'

                }
            }
        }
        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testApp()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }   
}
