
def gv

pipeline {
    agent any
    parameters {
        string(name: "ADDRESS_IP", defaultValue: "10.18.14.40", trim: true, description: "Address IP of BANC_DE_TEST")
    }
    
    stages {
        stage("init") {
            steps {
                script {
                    def rootDir = pwd()
                   sh ' echo ${rootDir}'
                   gv = load "${rootDir}/DevOps/Jenkins/script.groovy" 
                   sh ' echo "init"'
                }
            }
        }
        stage("build") {
            steps {
                script {
                   sh ' echo "Start build"'
                    gv.buildApp()
                   sh ' echo "End build"'

                }
            }
        }
        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testApp()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }   
}
