
def gv

pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }
    stages {
        stage("init") {
            steps {
                script {
                    def rootDir = pwd()
                   gv = load "${rootDir}/script.groovy" 
                   sh ' echo "init"'
                }
            }
        }
        stage("build") {
            steps {
                script {
                   sh ' echo "Start build"'
                    gv.buildApp()
                   sh ' echo "End build"'

                }
            }
        }
        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testApp()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }   
}
